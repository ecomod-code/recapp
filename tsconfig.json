{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@recapp/models/*": ["packages/models/src/*"],
      "@recapp/backend/*": ["packages/backend/src/*"],
      "@recapp/frontend/*": ["packages/frontend/src/*"]
    }
  },
  "include": [
    "packages/models/src",
    "packages/backend/src",
    "packages/frontend/src"
  ]
}
